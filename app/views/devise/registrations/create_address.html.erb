            <div class="step1">Basic Info</div>
            <div class="step2">Address Info</div>
            <div class="step3 selected">Completed</div>
            <ol class="header__contents__right__stepbar">
                <li class="done">
                  <span></span>
                </li>
                <li class="done">
                  <span></span>
                </li>
                <li class="done">
                  <span></span>
                </li>
            </ol>
          </div>
          <div class="signup__top__main__contents__content">
            <h1>User Registration Completed!</h1>
            <div class="signup__top__main__contents__content__description"> 
            <%= link_to root_path do %>
              <div class="signup__top__main__contents__content__description__icon">
                <i class="fas fa-user-plus"></i>
              </div>
              <div class="posts__containers__container__left__description__word">
                <h1>Secret Santa<br>を集める</h1>
              </div>
            <% end %>
            </div>
          </div>


      </div>
      </div>
    </div>
  </div>
