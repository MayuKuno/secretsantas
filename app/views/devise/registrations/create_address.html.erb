<div class="wrap">
  <div class="address">
    <div class="address__top">
      <div class="address__top__side">
        <div class="address__top__side__box">
        <%= link_to root_path do %>
          <div class="address__top__side__box__icon">
            <i class="fas fa-gift"></i><br>
          </div>
          <div class="address__top__side__box__name">
            <p>Secret</p>
            <p>Santa</p>
            <p>365</p>
          </div>
          <% end %>
        </div>
      </div>
