<div class="wrap">
<div class="signup">
  <div class="signup__top">
    <div class="signup__top__side">
      <div class="signup__top__side__box">
      <%= link_to root_path do %>
        <div class="signup__top__side__box__icon">
          <i class="fas fa-gift"></i><br>
        </div>
        <div class="signup__top__side__box__name">
          <p>Secret</p>
          <p>Santa</p>
          <p>365</p>
        </div>
         <% end %>
      </div>
    </div>
           <div class="signup__top__main">
      <div class="signup__top__main__contents">
        <div><h1>Edit my account</h1></div>
        <%= form_for @user  do |f| %>
          <div class="signup__top__main__contents__images">
            <div class="signup__top__main__contents__images__show">
              <% if @user.image.present? %>
                <%= image_tag @user.image, id: :img_prev %>
              <% else %>
                <%= image_tag "/assets/empty.png", id: :img_prev %>
              <% end %>
              </div>
            <%= f.label :image, class: 'signup__top__main__contents__images__image' do %>
              <div class="signup__top__main__contents__images__image__img">
                <%= icon('fas', 'image') %>
                Select image
              </div>
              <%= f.file_field :image, class: 'signup__top__main__contents__images__image__file' %>
              <% end %>
           </div>
           
          <div class="signup__top__main__contents__fields">
            <div class="signup__top__main__contents__fields__field1">
              <div class="signup__top__main__contents__fields__field1__username">
                <%= f.text_field :name, autofocus: true, autocomplete: "name", placeholder:"Name" %>
              </div>
              <div class="signup__top__main__contents__fields__field1__email">
                <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder:"Email" %>
              </div>
              <div class="signup__top__main__contents__fields__field1__password">
                <%= f.password_field :password, autocomplete: "new-password", placeholder:"Password (6 characters minimum)" %>
              </div>
              <div class="signup__top__main__contents__fields__field1__password">
                <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder:"Password confirmation" %>
              </div>

            </div>
            <div class="signup__top__main__contents__fields__field2">
              <div class="signup__top__main__contents__fields__field2__username">
                <%= f.text_field :zipcode, autofocus: true, autocomplete: "zipcode", placeholder:"郵便番号" %>
              </div>
              <div class="signup__top__main__contents__fields__field2__email">
                <%= f.text_field :prefecture, autofocus: true, autocomplete: "prefecture", placeholder:"都道府県" %>
              </div>
              <div class="signup__top__main__contents__fields__field2__password">
                <%= f.text_field :city, autocomplete: "city", placeholder:"市区町村" %>
              </div>
              <div class="signup__top__main__contents__fields__field2__password">
                <%= f.text_field :district, autocomplete: "district", placeholder:"番地" %>
              </div>
              <div class="signup__top__main__contents__fields__field2__password">
                <%= f.text_field :building, autocomplete: "building", placeholder:"ビル名" %>
              </div>
            </div>
          </div>
          <%= f.submit "Sign up", class:"signup__top__main__contents__signup"%>
        <% end %>

          <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
              <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
        <% end %>


    </div>
</div>
</div>

