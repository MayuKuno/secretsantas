<div class="postsnew__containers__container__form">
<%= form_for post do |f| %>
 <%= render "layouts/error_messages", model: f.object %>

  <div class="postsnew__containers__container__form__images">
    <div class="postsnew__containers__container__form__images__show">
    <% if post.image.present? %>
          <label class="image-upload">
          <%= f.file_field :image, class: "postsnew__containers__container__form__images__image__file", id: "upload_file" %> 
          <span id="preview_area"></span>
           <%= image_tag post.image, id:'preview'%>
 
          </label>
    <% else %>
 
        <label class="image-upload">
          <%= f.file_field :image, class: "postsnew__containers__container__form__images__image__file", id: "upload_file" %> 
          <span id="preview_area"></span> 
           <p class="text">Click here to add a picture</p>
          </label>
    <% end %>


    </div>
  </div>



  <div class="chat-post-form__field">
    <div class="chat-post-form__field--left">
      <div class='chat-post-form__label'>Caption</div>
    </div>
    <div class="chat-post-form__field--right">
      <%= f.text_field :caption, class: 'chat__post_name chat-post-form__input'%>
    </div>
  </div>


  <div class="chat-post-form__field">
    <div class="chat-post-form__field--left">
      <div class='chat-post-form__label'>Tags</div>
    </div>
    
    <div class="chat-post-form__field--right">
      <%= text_field_tag 'post[tag_list]', post.tag_list.join(","), class: "form-control", :data=>{:role=>"tagsinput"}%>
   </div>
  </div>
  
  <%= f.submit class: :postsnew__containers__container__form__btn %>
  <%= link_to "Back to Home", posts_path, class: "postsnew__containers__container__form__btn" %>
  <% end %>
</div>
